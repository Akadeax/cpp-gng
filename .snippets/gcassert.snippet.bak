<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Get Component and Assert</Title>
			<Shortcut>gcassert</Shortcut>
		</Header>
		<Snippet>
			<Code Language="CPP">
				<![CDATA[$Var$ = m_pParent->GetComponent<$Type$>();
				assert($Var$ != nullptr && "Entity has $C1$ component but no $Type$ component");]]>
			</Code>
			<Declarations>
				<Literal>
					<ID>Var</ID>
					<ToolTip>Choose the number you want the square root of.</ToolTip>
					<Default>16</Default>
				</Literal>
			</Declarations>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>